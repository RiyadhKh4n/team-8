extends base

block content
    #popup.overlay
      .wrapper
        a.close(href='') &times;
        .column.details
          .signup
            form#signup-form
              h1.h1-login Sign Up
              input(type='name', placeholder='Username')
              input(type='email', placeholder='Email')
              input(type='password', placeholder='Password')
              button.form-submit(type='submit') Sign Up
              span.extra-info
                | Already have an account?
                a#signin(href='/login') Sign In
        .column.content
          .signup
            h1 Hello, Friend!
            p.enter-details-p Create an account to begin your journey with Workle